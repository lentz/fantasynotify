{
  "name": "fantasynotify",
  "version": "1.0.0",
  "description": "Transaction notifications for Yahoo Fantasy Leagues",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lentz/fantasynotify.git"
  },
  "author": "Jesse Lentz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lentz/fantasynotify/issues"
  },
  "homepage": "https://github.com/lentz/fantasynotify#readme",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit --watch",
    "check-leagues": "node ./dist/checkLeagues.js",
    "lint": "eslint '**/*.ts'",
    "prebuild": "rm -rf ./dist",
    "start": "node ./dist/app.js",
    "serve": "tsx watch app.ts",
    "test": "vitest run",
    "test-watch": "vitest"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "body-parser": "^1.20.2",
    "client-oauth2": "^4.3.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^7.1.2",
    "got": "^13.0.0",
    "handlebars": "^4.7.7",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.3",
    "mongoose-encryption": "^2.1.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/morgan": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vitest": "^0.2.8",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "tsx": "^3.13.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.6"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
