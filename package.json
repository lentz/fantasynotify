{
  "name": "fantasynotify",
  "version": "1.0.0",
  "description": "Transaction notifications for Yahoo Fantasy Leagues",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lentz/fantasynotify.git"
  },
  "author": "Jesse Lentz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lentz/fantasynotify/issues"
  },
  "homepage": "https://github.com/lentz/fantasynotify#readme",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit --watch",
    "check-leagues": "node ./dist/checkLeagues.js",
    "lint": "eslint '**/*.ts'",
    "prebuild": "rm -rf ./dist",
    "start": "node ./dist/app.js",
    "serve": "tsx watch --env-file .env app.ts",
    "test": "vitest run",
    "test-watch": "vitest"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "body-parser": "^1.20.2",
    "client-oauth2": "^4.3.3",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^8.0.1",
    "handlebars": "^4.7.7",
    "helmet": "^7.1.0",
    "mongoose": "^8.6.0",
    "mongoose-encryption": "^2.1.2",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vitest": "^0.5.4",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
