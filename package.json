{
  "name": "fantasynotify",
  "version": "1.0.0",
  "description": "Transaction notifications for Yahoo Fantasy Leagues",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lentz/fantasynotify.git"
  },
  "author": "Jesse Lentz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lentz/fantasynotify/issues"
  },
  "homepage": "https://github.com/lentz/fantasynotify#readme",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit --watch",
    "check-leagues": "node ./dist/checkLeagues.js",
    "lint": "eslint .",
    "prebuild": "rm -rf ./dist",
    "start": "node ./dist/app.js",
    "serve": "node --watch --experimental-strip-types --inspect=:9229 --env-file .env app.ts",
    "test": "vitest run",
    "test-watch": "vitest"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "body-parser": "^1.20.2",
    "client-oauth2": "^4.3.3",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^8.0.1",
    "handlebars": "^4.7.7",
    "helmet": "^8.0.0",
    "mongoose": "^8.9.6",
    "mongoose-encryption": "^2.1.2",
    "morgan": "^1.10.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@vitest/eslint-plugin": "^1.1.25",
    "eslint": "^9.21.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.7"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
